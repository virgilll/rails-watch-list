<%# <head>
    <meta charset="UTF-8">
    <title>OMDb API</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head> %>



<div class="container mb-5">
  <div class="row my-2">
    <div class ="col">
      <div data-controller="refresh-list">
          <%= form_with url: list_path(@list), method: :get, html: { class: 'mb-5', data: { refresh_list_target: 'form' } } do |f| %>
            <%= f.text_field :query,
                            class: "form-control",
                            placeholder: 'Type a movie title',
                            value: params[:query],
                            data: {
                              refresh_list_target: 'searchInput',
                              action: "keyup->refresh-list#update"
                            } %>
          <% end %>
          <%= render 'list', movies: @movies %>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Add movie to list',  new_list_bookmark_path(@list), class:"btn btn-primary mx-4" %>
